    "express": "^4.18.3",
    "framer-motion": "^11.11.10",
    "framer-motion-3d": "^11.11.10",
    "gradient-string": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "react-intersection-observer": "^9.8.0",
    "react-syntax-highlighter": "^15.6.1",
    "react-tilt": "^1.0.2",
    "react-tsparticles": "^2.12.2",
    "three": "^0.161.0",
    "tsparticles": "^2.12.0",
    "tsparticles-engine": "^2.12.0",
    "webpack-env": "^0.8.0"
