{
  "type": "module",
  "scripts": {
    "dev": "npm run clean && concurrently \"npm run watch:app\" \"npm run watch:tailwind\"",
    "build": "npm run clean && cross-env NODE_ENV=production webpack && npm run build:tailwind",
    "watch:app": "cross-env NODE_ENV=development webpack serve",
    "watch:tailwind": "tailwindcss -i ./src/styles/globals.css -o ./public/styles.css --watch --minify",
    "build:tailwind": "tailwindcss -i ./src/styles/globals.css -o ./public/styles.css --minify",
    "start": "cross-env NODE_ENV=production node server.js",
    "preview": "cross-env NODE_ENV=production webpack serve --port 4000",
    "clean": "rimraf dist && node ./scripts/create-dirs.js",
    "prebuild": "npm run clean",
    "postbuild": "echo \"✨ Build completado con éxito\" && cp public/styles.css dist/styles.css"
  },
  "dependencies": {
    "@react-spring/three": "^9.7.3",
